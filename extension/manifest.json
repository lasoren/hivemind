{
  "name": "HiveMind Live",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension interfaces with HiveMind and provides sentiment for the relevant information on a page",
  "homepage_url": "http://swarmtheinter.net",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "https://www.google.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ],
    "permissions": [
      "tabs"
  ]
}
